<!-- page content -->

<div class="right_col" role="main">
  <div class="">



    <div class="row">

      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
    <h2>Liste des programmes <small>Gestion des programmes</small></h2>
      <div class="pull-right">
        <a class="btn btn-success btn-md" href="/addprog" role="button"><i class="fa fa-plus"></i>   Nouveau programme</a>
      </div>



    <div class="clearfix"></div>
  </div>

          <div class="x_content">

<div class="table-responsive">
<!--    <table class="table table-striped jambo_table bulk_action"> -->
  <table id="datatable-checkbox" class="table table-striped table-bordered bulk_action">
    <thead>
      <tr class="headings">
        <th>
          <input type="checkbox" id="check-all" class="flat">
        </th>
        <th class="column-title">Nom Programme</th>

        <th class="column-title">Description Programme</th>

        <th class="column-title">Prix programme</th>

        <th class="column-title no-link last"><span class="nobr">Action</span>
        </th>
        <th class="bulk-actions" colspan="7">
          <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
        </th>
      </tr>
    </thead><li><a href="/addprog">Ajout Programme</a></li>

    <tbody>
      <% for(var i=0; i < progs.length; i++) { %>

      <tr class="even pointer">
        <td class="a-center ">
          <input type="checkbox" class="flat" name="table_records">
        </td>
        <td class=" "><%= progs[i].progname %></td>

        <td class=" "><%= progs[i].progdesc %></td>

        <td class="text-right"><%= progs[i].progprice.toFixed(2) %></td>

        <td class=" last ">
          <div class="pull-right"><a class="btn btn-info btn-xs" href="/editprogone/<%= progs[i]._id %>" role="button"><i class="fa fa-pencil"></i> Edit </a>
            <a class="btn btn-danger btn-xs" onclick="if (confirm('Voulez vous vraiment supprimer ce programme ?')) supprimer('/listprog/<%= progs[i]._id %>');" href="/listprog"><i class="fa fa-trash-o"></i> Delete </a>
        </div>
      </tr>

    <% } %>
    </tbody>
  </table>
</div>

</div>
</div>
</div>
