<% include header.ejs %>
  <div class="right_col" role="main">
    <div class="page-title">
    <div class="title_left">
      <h3></h3>
    </div>
  </div>
  <div class="clearfix"></div>
  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Saisie d'un nouveau produit </h2>

        <div class="clearfix"></div>

      </div>
      <div class="x_content">

      <form class="form-horizontal form-label-left input_mask" validate action="/addprod" method="post">
        <div class="form-group">
          <label class="control-label col-md-3 col-sm-3 col-xs-12">Code produit : <span class="required">*</span>
          </label>
          <div class="col-md-6 col-sm-6 col-xs-12">
            <input class="form-control col-md-7 col-xs-12" data-validate-length-range="6" data-validate-words="1" name="prodcode" placeholder="Code produit" required="required" type="text" >
          </div>
        </div>

      <div class="form-group">
          <label class="control-label col-md-3 col-sm-3 col-xs-12">Nom produit : <span class="required">*</span>
          </label>
          <div class="col-md-6 col-sm-6 col-xs-12">
            <input class="form-control col-md-7 col-xs-12" data-validate-length-range="6" data-validate-words="" name="prodname" placeholder="Nom produit" required="required" type="text" >
           </div>
       </div>

       <div class="form-group">
           <label class="control-label col-md-3 col-sm-3 col-xs-12">Quantité minimale : <span class="required">*</span>
           </label>
           <div class="col-md-6 col-sm-6 col-xs-12">
             <input class="form-control col-md-7 col-xs-12" data-validate-length-range="6" data-validate-words="1" name="qtemin" placeholder="Quantité minimale" type="Number" required="required" >
           </div>
       </div>

       <div class="form-group">
           <label class="control-label col-md-3 col-sm-3 col-xs-12">Produit Extra : <span class="required">*</span>
           </label>
          <div class="col-md-6 col-sm-6 col-xs-12">
            <input type="checkbox" class="js-switch"  value="true" name="extra">
          </div>
        </div>



        <div class="clearfix"></div>
        <div class="ln_solid"></div>
        <div class="form-group" align="right">
          <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
            <!--
            <button type="submit" class="btn btn-primary">Cancel</button>
          -->
            <button id="send" type="submit" class="btn btn-primary">Enregistrer</button>
            <button id="retour" type="button" class="btn btn-success" onclick="window.location.href='/listprod'">Liste des produits</button>
          </div>
        </div>


      </form>
    </div>

    </div>
  </div>
</div>
</div>

<% include footer.ejs %>
