 <% include header.ejs %>
<!-- page content -->
<div class="right_col" role="main">
  <div class="">


    <div class="clearfix"></div>

    <div class="row">
      <!-- form input mask -->
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <h2>Nouvelle Entrée en stock <small>Gestion de Stock</small></h2>
            <div class="" align="right">
              <label for="">Date d'arrivée : <%= dt %></label>
            </div>

            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <br />
            <form class="form-horizontal form-label-left" novalidate action="/stockinbk" method="post">




              <div class="item form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12 has-feedback-left" for="prog">Choisir un depot <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                  <select id="depot" type="text" name="depot" required="required" data-validate-length-range="5,20" class="form-control col-md-7 col-xs-12" placeholder="">
                    <option>Choisir un depot</option>
                    <% for(i=0; i<depots.length; i++){%>
                      <option><%= depots[i].depotname%></option>
                    <%}%>
                  </select>
                </div>
              </div>

              <div class="item form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12 has-feedback-left" for="prog">Choisir un fournisseur <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                  <select id="provider" type="text" name="provider" required="required" data-validate-length-range="5,20" class="form-control col-md-7 col-xs-12" placeholder="">
                    <option>Choisir un fournisseur</option>
                    <% for(i=0; i<providers.length; i++){%>
                      <option><%= providers[i].raisonsociale %></option>
                    <%}%>
                  </select>
                </div>
              </div>

            <div class="form-group">
                <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Date Achat</label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                      <input type="text" class="form-control col-md-7 col-xs-12 has-feedback-right" id="dateachat" name="dateachat" placeholder="Date achat" aria-describedby="inputSuccess2Status4" required="required" data-inputmask="'mask': '99/99/9999'">
                      <span class="fa fa-calendar-o form-control-feedback right" aria-hidden="true"></span>
                      <span id="inputSuccess2Status4" class="sr-only">(success)</span>
                </div>
            </div>

              <div class="item form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="nom">Num BC <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                  <input id="numbc" class="form-control col-md-7 col-xs-12" data-validate-length-range="6" data-validate-words="1" name="numbc" placeholder="BC" required="required" type="text" value="" >
                </div>
              </div>


              <div class="item form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="nom">Num BL <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                  <input id="numbl" class="form-control col-md-7 col-xs-12" data-validate-length-range="6" data-validate-words="1" name="numbl" placeholder="BL" required="required" type="text" value="" >
                </div>
              </div>
              <div class="row">
                      <div class="col-md-3 col-sm-3 col-xs-12 item form-group has-feedback">
                          <label for="">Produit : </label>
                            <select id="prodinfo" type="text" name="prodinfo"  data-validate-length-range="5,20" class="form-control select2_single" placeholder="Produit">
                              <option></option>
                              <% for (var i = 0; i < prods.length; i++) {%>
                                <option value="<%= prods[i]._id + ' | ' + prods[i].prodcode + ' | ' + prods[i].prodname %>"><%= prods[i].prodcode + ' | ' + prods[i].prodname %> <span style="color:blue"><%= prods[i].extra? " | Extra Product" : ""%></span> </option>
                              <%}%>

                            </select>
                      </div>

                      <div class="col-md-1 col-sm-1 col-xs-12 item form-group">
                          <label for="">Qté : </label>
                          <input class="form-control" data-validate-length-range="6" data-validate-words="1" id="prodqte"  name="prodqte" placeholder="Quantité" type="Number" >
                          <!-- <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span> -->
                      </div>


                      <div class="col-md-1 col-sm-1  col-xs-12 item form-group has-feedback" style="padding:0 0 0 0;">
                          <label for="">Unité : </label>
                          <select id="unitegroupe" type="text" name="unitegroupe"  data-validate-length-range="5,20" class="form-control col-md-7 col-xs-12" placeholder="Unité de mesure">
                            <option>Unité</option>
                            <option>Caisse</option>
                            <option>Boîte</option>
                          </select>
                          <!-- <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span> -->
                      </div>
                      <div class="col-md-2 col-sm-2 item form-group has-feedback">
                        <label for="">Date Expiration : </label>
                         <input type="text" class="form-control has-feedback-left" id="prodexpdate" placeholder="Date d'expiration" aria-describedby="inputSuccess2Status">
                         <span class="fa fa-calendar-o form-control-feedback left" aria-hidden="true"></span>
                         <span id="inputSuccess2Status" class="sr-only">(success)</span>
                      </div>
                      <div class="col-md-2 col-sm-2 col-xs-12 item form-group">
                        <label for="">Prix Achat : </label>
                        <input class="form-control" data-validate-length-range="6" id="prixachat" name="prixachat" placeholder="Prix d'achat"  type="text" >
                      </div>
                      <div class="col-md-2 col-sm-2 item form-group has-feedback">
                        <label for="">Prix Vente : </label>
                        <input class="form-control" data-validate-length-range="6" id="prixvente" name="prixvente" placeholder="Prix de vente" required="required" type="text" >
                      </div>
                      <div class="col-md-1 col-sm-1 col-xs-12 item form-group">
                        <label for="">Ajouter à la liste : </label>
                          <a onclick="" id="addline" type="" class="btn btn-primary btn-block"><i class="fa fa-check"></i></a>
                      </div>

                      <textarea id="message" type="hidden" name="obj" required="required" class="form-control hidden" name="message" placeholder="Obj">
                      </textarea>
              </div>


              <label for="">Detail produits :</label>
              <div id="jsGrid"></div>
              <div class="" align="right">
              <button type="submit" class="btn btn-primary">Enregistrer</button>
              <button id="retour" type="button" class="btn btn-success" onclick="window.location.href='/listprod'">Liste des produits</button>

            </div>

            </form>
          </div>
        </div>
      </div>
      <!-- /form input mask -->

    </div>



      </div>
    </div>
  </div>
</div>
<!-- /page content -->


