<script type="text/javascript">
var tab = [];
$(document).ready(function() {
  $("#jsGrid").jsGrid({
      width: "100%",
      height: "400px",

      /*filtering: true,
      autoload: true,
      inserting: false,
      editing: true,
      sorting: true,
      paging: true,*/

      filtering: false,
      editing: true,
      sorting: true,
      paging: true,
      autoload: true,

      controller: {
        loadData: function(filter) {
            return $.grep(tab, function(obj) {
                return (!filter.prodcode || obj.prodcode.indexOf(filter.prodcode) > -1)
                && (!filter.prodname || obj.prodname.indexOf(filter.prodname) > -1)
                && (!filter.prodqte || obj.prodqte == filter.prodqte)
                && (!filter.produnite || obj.produnite.indexOf(filter.produnite) > -1)
                && (!filter.prodexpdate || obj.prodexpdate.indexOf(filter.prodexpdate) > -1)
                && (!filter.prixachat || obj.prixachat.indexOf(filter.prixachat) > -1)
                && (!filter.prixvente || obj.prixvente.indexOf(filter.prixvente) > -1);
            });
        },

        insertItem: function(insertingClient) {

        },

        updateItem: function(updatingClient) {

        },

        deleteItem: function(deletingClient) {

        }
      },

      data: tab,

      fields: [
          { name: "prodcode", type: "text", title: "Code produit", width: 150, validate: "required", editing: false },
          { name: "prodname", type: "text", title: "Nom produit", width: 300 , editing: false },
          { name: "prodqte", type: "number", title: "Quantité", width: 100 },
          { name: "produnite", type: "text", title: "Unité", width: 100 },
          //{ name: "prodexpdate", type: "text", items: countries, valueField: "Id", textField: "Name" },

          { name: "prodexpdate", type: "text", title: "Date d'expiration", width: 200, editing: false },
          { name: "prixachat", type: "number", title: "Prix Achat", width: 100 },
          { name: "prixvente", type: "number", title: "Prix Vente", width: 100 },
          { type: "control" }
      ]
    });


    $("#addline").click(function() {
      //console.log($("#prodinfo").val().split("|")[0]);
      //console.log(tab);
       if($('#progs').val() !== "Choisir un Programme" && $('#prodinfo').val() !== "" && $('#prodqte').val() !== "" && $('#prodexpdate').val() !== "" ){
         //$('#detail tbody').append('<tr class="odd pointer"><td class=" ">'+$("#prodinfo").val().split("|")[0] +'</td><td class=" ">'+$("#prodinfo").val().split("|")[1] +'</td><td class=" ">'+$('#prodqte').val()+'</td><td class=" ">'+$('#prodexpdate').val()+'</td><td class=" last"> <a onclick="$(this).parent().parent().remove()" class="removelink" ><i class="fa fa-close"></i></a> </td></tr>');

        // $('#progname').text($('#progs').val());
         $('#progname-val').val($('#progs').val());

         tab.push({
           prodid: $("#prodinfo").val().split("|")[0],
           prodcode: $("#prodinfo").val().split("|")[1],
           prodname: $("#prodinfo").val().split("|")[2],
           prodqte: $('#prodqte').val(),
           produnite: $('#unitegroupe').val(),
           prodexpdate: $('#prodexpdate').val(),
           prixachat: $('#prixachat').val(),
           prixvente: $('#prixvente').val()
          });

         $('#message').val(JSON.stringify(tab));

         $('#prodinfo').val('');
         $('#prodqte').val('');
         $('#prodexpdate').val('');
          $('#prixachat').val('');
           $('#prodexpdate').val('');
         $('#progs').attr('disabled','disabled');

       }else{
         $('#myModal').modal('show');

       }
       $("#jsGrid").jsGrid({

           onItemUpdated: function() {
           //console.log("row updated");
           $('#message').val(JSON.stringify(tab));
           },

           onItemDeleted: function(arg) {

           tab.splice(arg.itemIndex, 1);
           $('#message').val(JSON.stringify(tab));

           },
           onItemInserted: function() {
           //console.log("row deleted");
           $('#message').val(JSON.stringify(tab));
           }
       });


    });



});
</script>




