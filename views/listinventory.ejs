<div class="right_col" role="main">
  <div class="">

    <!-- nameinventory: String,
    depotname: String,
  	dateinventory: String, -->

    <div class="row">

      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
    <h2>Liste des inventaires <small>Gestion de Stock</small></h2>
      <div class="pull-right">
        <a class="btn btn-success btn-md" href="/addinventory" role="button"><i class="fa fa-plus"></i>   Nouveau inventaire</a>
      </div>

    <div class="clearfix"></div>
  </div>

          <div class="x_content">
            <div class="table-responsive">
          <!--    <table class="table table-striped jambo_table bulk_action"> -->
              <table id="datatable-checkbox" class="table table-striped table-bordered bulk_action">
                <thead>
                  <tr class="headings">
                    <th>
                      <input type="checkbox" id="check-all" class="flat">
                    </th>
                    <th class="column-title">Date inventaire </th>
                    <th class="column-title">Designation </th>
                    <th class="column-title">Nom du dépôt </th>

                    <th class="column-title no-link last"><span class="nobr">Action</span>
                    </th>
                    <th class="bulk-actions" colspan="7">
                      <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                    </th>
                  </tr>
                </thead>

                <tbody>

                    <% for(var i=0; i < inventory.length; i++) { %>
                    <tr class="even pointer">
                      <td class="a-center ">
                        <input type="checkbox" class="flat" name="table_records">
                      </td>
                      <td class=" "><%= inventory[i].dateinventory %></td>
                        <td class=" "><%= inventory[i].nameinventory %></td>
                          <td class=" "><%= inventory[i].depotname %></td>
                      <td class="last"  align='right' width='220px;'>
                        <a class="btn btn-info btn-xs" href="/editinventory/<%= inventory[i]._id %>" role="button"><i class="fa fa-pencil"></i> Edit </a>
                        <a class="btn btn-danger btn-xs" onclick="if (confirm('Voulez vous vraiment supprimer la ligne sélectionnée ?')) supprimer('/delinventory/<%= inventory[i]._id%>');" href="/listinventory"><i class="fa fa-trash-o"></i> Delete </a>
                        <a class="btn btn-primary btn-xs" href="/editinventory/<%= inventory[i]._id %>" role="button"><i class="fa fa-bars"></i> Détail </a>

                      </td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
